<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/button_lernen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_medium"
            android:textSize="@dimen/text_size_normal"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:drawableLeft="@drawable/ic_mic_48dp"
            android:text="Geräusch lernen" />

        <Button
            android:layout_height="@dimen/button_height_medium"
            android:textSize="@dimen/text_size_normal"
            android:id="@+id/button_alle_zeigen"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:drawableLeft="@drawable/ic_toc_48dp"
            android:text="Alle Geräusche anzeigen" />

        <Button
            android:id="@+id/button_app_einstellungen"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:drawableLeft="@drawable/ic_settings_48dp"
            android:text="Android gerät Einstellungen"
            android:layout_height="@dimen/button_height_medium"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/button_einstellungen_audioant"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:drawableLeft="@drawable/ic_audioant_48dp"
            android:enabled="true"
            android:fadeScrollbars="false"
            android:text="AudioAnt Einstellungen"
            android:layout_height="@dimen/button_height_medium"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ic_verbunden"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_wifi_not_connected_24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignTop="@+id/ic_verbunden"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/ic_verbunden"
        android:text="AudioAnt nicht verbunden"
        android:textSize="@dimen/text_size_medium" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_range_extend_off_36dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:text="Smartphone wird nicht als Mikrofon verwendet"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>
